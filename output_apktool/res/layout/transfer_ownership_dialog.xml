<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/inset_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/transfer_ownership_component_to_transfer_to" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:id="@id/component_name" android:layout_width="0.0dip" android:layout_height="wrap_content" android:hint="@string/transfer_ownership_example_package_name_example_component" android:maxLines="1" android:layout_weight="1.0" android:inputType="text" />
            <Button android:id="@id/transfer_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/transfer" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Small" android:paddingLeft="@dimen/inset_padding" android:paddingRight="@dimen/inset_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/transfer_ownership_suitable_components_found_on_this_deivce" />
        <ListView android:id="@id/list" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Small" android:paddingLeft="@dimen/inset_padding" android:paddingTop="@dimen/inset_padding" android:paddingRight="@dimen/inset_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/transfer_ownership_result_of_the_transfer_success_or_exception_log" />
        <EditText android:textColor="@color/red" android:id="@id/result" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="5" />
    </LinearLayout>
</LinearLayout>